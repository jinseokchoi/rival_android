<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="0.9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@drawable/soccer"
            android:elevation="0dp"
            android:padding="0dp"
            android:scaleType="fitXY"
            android:textColor="#FFFFFF"
            android:textSize="11dp"
            android:text="축구\nFoot Ball"
            android:visibility="visible" />

        <Button
            android:id="@+id/imageButton1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@drawable/baseball"
            android:padding="0dp"
            android:scaleType="fitXY"
            android:textColor="#FFFFFF"
            android:textSize="11dp"
            android:text="야구\nBase ball" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@drawable/basketball"
            android:padding="0dp"
            android:scaleType="fitXY"
            android:textColor="#FFFFFF"
            android:textSize="11dp"
            android:text="농구\nBasket Ball"
            android:visibility="visible" />

        <Button
            android:id="@+id/imageButton3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@drawable/volleyfootball"
            android:padding="0dp"
            android:scaleType="fitXY"
            android:textColor="#FFFFFF"
            android:textSize="11dp"
            android:text="족구\nVolley Foot Ball" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/imageButton4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@drawable/billiards"
            android:padding="0dp"
            android:scaleType="fitXY"
            android:textColor="#FFFFFF"
            android:textSize="11dp"
            android:text="당구\nBilliards"
            android:visibility="visible" />

        <Button
            android:id="@+id/imageButton5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@drawable/bowling"
            android:padding="0dp"
            android:scaleType="fitXY"
            android:textColor="#FFFFFF"
            android:textSize="11dp"
            android:text="볼링\nbowing" />


    </LinearLayout>

</LinearLayout>

